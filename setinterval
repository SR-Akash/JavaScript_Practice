<html>
    <head>
        <script>
            var x = 0;
            function started()
            {
                x =  window.setTimeout(start,2000)
            }
            function stopped()
            {
                window.clearTimeout(x);
            }
            function start()
            {
                document.getElementById("op").innerHTML="here we go";
            }

        </script>
        <body>
            
            <button onclick="started()">start</button>
            <br>
            <h2 id="op">start execution</h2>
            <button onclick="stopped()">stop</button>
            
        </body>
    </head>
</html>